{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "target": "es5",
    "module": "es2020",
    "lib": ["es2018", "dom"],
    "strict": false,
    "sourceMap": true,
    "declaration": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "~/*": ["./src/*"],
      "@macrostrat/ui-components": [
        "web-components/packages/ui-components/src"
      ],
      "@macrostrat/map-interface": ["web-components/packages/map-interface/src"]
    }
  },
  "include": ["src", "web-components/packages/*/src"]
}
